<snippet tags="dream" name="garden2_centerup">

<div class="absoluteAlign bothHalves gameBg" style="background-image: url('assets/9_center2.png.gif'); background-size: cover">
</div>

<% 
$(function () {
    mainScript.addArrow("up", "garden2_centerupup");
    mainScript.addArrow("down", "garden2_center");

    if (!story.lilyPicked) {
        mainScript.addNpc("assets/d_wesley.gif", 17, 32, 12, "Wesley", mainScript.dialogue.treasureDialogue);
    }
    else {
        mainScript.addNpc("assets/d_wesley.gif", 17, 32, 12, "Wesley", mainScript.dialogue.treasureDialogue2);
    }
});
%>

</snippet>

