<snippet tags="dream dreamMusicA" name="garden3_centerupupup">

<div class="absoluteAlign bothHalves gameBg" style="background-image: url('assets/garden_center.gif'); background-size: cover; animation: blur 0.25s infinite alternate ease">
</div>

<div id="gate1" class="absoluteAlign bothHalves"></div>

<% 
$(function () {
    mainScript.addArrow("down", "garden3_centerupup");

    const gate1 = document.getElementById("gate1");
    gate1.style.cursor = "pointer";

    if (story.myInventory.checkHasItem("blood_left") && story.myInventory.checkHasItem("blood_right")) {
        gate1.addEventListener("click", () => {
            mainScript.showDialogue(mainScript.dialogue.gate2c)
        });
    }
    else {
        gate1.addEventListener("click", () => {
            mainScript.showDialogue(mainScript.dialogue.gate2d)
        });
    }
});
%>

</snippet>